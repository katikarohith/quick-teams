<!doctype html>
<html>
  <head>
    <title>Community - Quick Teams</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
  </head>
  <body>
    <%- include('partials/header') %>
    
    <main class="container py-5">
      <h3>Community Events</h3>
      <p class="text-muted">Join events, study groups, or tournaments easily.</p>

      <div class="row">
        <% events.forEach(e => { %>
          <div class="col-md-4">
            <div class="card mb-3 p-3">
              <h5><%= e.name %></h5>
              <p><%= e.description %></p>
              <p><strong>Date:</strong> <%= e.date %></p>
              <form method="post" action="/dashboard/join/<%= e.name %>">
                <button type="submit" class="btn btn-sm btn-primary">Join</button>
              </form>
            </div>
          </div>
        <% }) %>
      </div>
    </main>

    <%- include('partials/footer') %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>