<!doctype html>
<html>
  <head>
    <title>Quick Teams</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
  </head>
  <body>
    <%- include('partials/header') %>
    <main class="container py-5">
      <div class="row align-items-center">
        <div class="col-md-6">
          <h1 class="display-5">Quick Teams</h1>
          <p class="lead">Find your missing piece. Quickly form teams for hackathons, projects, or study groups.</p>
          <% if (!currentUser) { %>
            <a class="btn btn-primary" href="/auth/register">Get Started</a>
          <% } else { %>
            <a class="btn btn-primary" href="/dashboard">Go to Dashboard</a>
          <% } %>
        </div>
        <div class="col-md-6">
          <!-- placeholder graphic -->
          <img src="https://via.placeholder.com/500x300?text=Quick+Teams" class="img-fluid" alt="Quick Teams">
        </div>
      </div>
    </main>
    <%- include('partials/footer') %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>