<!doctype html>
<html>
  <head>
    <title>Login - Quick Teams</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
  </head>
  <body>
    <%- include('partials/header') %>
    <main class="container py-5">
      <div class="row justify-content-center">
        <div class="col-md-6">
          <h2>Login</h2>

          <% if (errors && errors.length) { %>
            <div class="alert alert-danger">
              <ul class="mb-0">
                <% errors.forEach(e => { %><li><%= e.msg %></li><% }) %>
              </ul>
            </div>
          <% } %>

          <form action="/auth/login" method="post" class="card card-body">
            <div class="mb-3"><input class="form-control" name="email" type="email" placeholder="Email" value="<%= form ? form.email : '' %>" required></div>
            <div class="mb-3"><input class="form-control" name="password" type="password" placeholder="Password" required></div>
            <button class="btn btn-primary">Login</button>
          </form>
          <p class="mt-3">New? <a href="/auth/register">Create an account</a></p>
        </div>
      </div>
    </main>
    <%- include('partials/footer') %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>