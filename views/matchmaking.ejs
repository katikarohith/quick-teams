<!doctype html>
<html>
  <head>
    <title>Matchmaking - Quick Teams</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
  </head>
  <body>
    <%- include('partials/header') %>
    <main class="container py-5">

      <h3>Search Teammates</h3>
      <form method="get" action="/dashboard/search" class="mb-3">
        <input type="text" class="form-control" name="skills" placeholder="Enter skills (comma separated)">
        <button class="btn btn-primary mt-2">Search</button>
      </form>

      <% if (message) { %>
        <div class="alert alert-warning"><%= message %></div>
      <% } %>

      <% if (results && results.length) { %>
        <div class="row">
          <% results.forEach(r => { %>
            <div class="col-md-6">
              <div class="card mb-3 p-3">
                <h5><%= r.user.name %> <small class="text-muted">(<%= r.user.email %>)</small></h5>
                <p><strong>Skills:</strong> <%= r.user.skills && r.user.skills.length ? r.user.skills.join(', ') : 'None' %></p>
                <p><strong>Availability:</strong> <%= r.user.availability || 'Not set' %></p>
                <p><strong>Match score:</strong> <%= r.score %></p>
                <form method="post" action="/dashboard/request/<%= r.user._id %>">
                  <button type="submit" class="btn btn-sm btn-success">Send Team Request</button>
                </form>
              </div>
            </div>
          <% }) %>
        </div>
      <% } %>
    </main>
    <%- include('partials/footer') %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>