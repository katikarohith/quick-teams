<!doctype html>
<html>
  <head>
    <title>Edit Profile - Quick Teams</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
  </head>
  <body>
    <%- include('partials/header') %>
    <main class="container py-5">
      <div class="row justify-content-center">
        <div class="col-md-8">
          <h3>Edit profile</h3>
          <form action="/dashboard/profile" method="post" class="card card-body">
            <div class="mb-3"><input class="form-control" name="name" placeholder="Full name" value="<%= user ? user.name : '' %>" required></div>
            <div class="mb-3"><input class="form-control" name="skills" placeholder="Skills (comma separated)" value="<%= user && user.skills ? user.skills.join(', ') : '' %>"></div>
            <div class="mb-3"><input class="form-control" name="needs" placeholder="What you need (comma separated)" value="<%= user && user.needs ? user.needs.join(', ') : '' %>"></div>
            <div class="mb-3"><input class="form-control" name="availability" placeholder="Availability (e.g., Free today)" value="<%= user ? user.availability : '' %>"></div>
            <button class="btn btn-primary">Save Profile</button>
          </form>
        </div>
      </div>
    </main>
    <%- include('partials/footer') %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>